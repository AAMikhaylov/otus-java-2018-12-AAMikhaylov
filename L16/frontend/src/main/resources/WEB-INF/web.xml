<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app>
    <display-name>L16</display-name>
    <description>Homework for the OTUS's course "Java Developer". Lesson 16. Message Server.</description>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ru.otus.l16.frontend.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>ru.otus.l16.frontend.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>newUserServlet</servlet-name>
        <servlet-class>ru.otus.l16.frontend.servlets.NewUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newUserServlet</servlet-name>
        <url-pattern>/newUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>usersServlet</servlet-name>
        <servlet-class>ru.otus.l16.frontend.servlets.UsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>usersServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>shutdownServlet</servlet-name>
        <servlet-class>ru.otus.l16.frontend.servlets.ShutdownServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shutdownServlet</servlet-name>
        <url-pattern>/shutdown</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/classes/SpringBeans.xml</param-value>
    </context-param>
    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>ru.otus.l16.frontend.servlets.AuthorisationFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <servlet-name>mainServlet</servlet-name>
        <servlet-name>usersServlet</servlet-name>
        <servlet-name>newUserServlet</servlet-name>
    </filter-mapping>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
</web-app>

